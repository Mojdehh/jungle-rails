<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h4>Thank you for your order <%= @order.email %>!</h4>
  </header>

  <div class="order-summary jumbotron">
    <div class="line-items">
      <% line_items = LineItem.where(order_id: @order.id) %>
      <% line_items.each do |line_item| %>
        <%= render 'line_item', product_id: line_item.product_id, quantity: line_item.quantity, line_total: line_item.total_price %>
      <% end %>
    </div>
  </div>

  <h3>Your order total is <%= humanized_money_with_symbol @order.total %><h3>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
